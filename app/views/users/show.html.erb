<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row my">
      <div class="col-md-6">
        <h5>Informations personnelles</h5>
        <ul class="list-group mt-5 mb-5">
          <li class="list-group-item"><strong>Prénom: </strong><%= @user.first_name %> </li>
          <li class="list-group-item"><strong>Nom: </strong><%= @user.last_name %> </li>
          <li class="list-group-item"><strong>Email: </strong><%= @user.email %> </li>
          <li class="list-group-item"><strong>Téléphone: </strong><%= @user.phone %> </li>
        </ul>
        <%= render(ButtonComponent.new(label: "Modifier mes informations", url:  edit_user_registration_path(current_user), style: "dark", size: "md")) %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-12">
        <h5>Historique des commandes</h5>
        <table class="table my-5">
          <thead>
            <tr>
              <th>N° de commande</th>
              <th>Montant</th>
              <th>Date</th>
              <th>Statut</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.amount %></td>
                <td><%= order.created_at %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-12">
        <h2>Vous devez vous connecter pour acceder à ces informations.</h2>
      </div>
    </div>
  </div>
<% end %>
