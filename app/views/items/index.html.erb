<p style="color: green"><%= notice %></p>



  <div class="justify-content-sm-center mx-2">
    <h1>Menu</h1>
  </div>
    <% categories = ["Dwish 🥪", "Salades 🥬", "Boissons 🥤", "Desserts 🍪", "Accompagnements 🍟"] %>
      <% categories.each do |category| %>
        <div class="justify-content-sm-center mx-2">
          <h3><%= category %></h3>

        </div>
          <% @items.select { |item| item.category.name == category }.each do |item| %>
            <div class="row row-cols-1 row-cols-md-4 row-cols-md-2 g-3 mb-3">
              <div class="col-md-4">
                <%= render partial: 'items/image' %>
              </div>
              <div class="col-md-4">
                <%= render item %>
                  <div class="p-2">
                    <%= button_to "Ajouter au panier", cart_items_path(item_id: item.id), class: "btn btn-info btn-block", method: :post, data: { turbo: false } %> 
                  </div>
              </div>
            </div>
          <% end %>
      <% end %>
</div>
