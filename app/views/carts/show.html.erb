<p style="color: green"><%= notice %></p>



<div class="justify-content-sm-center mx-2">
  <div>
  <h6>Votre panier: <%= generate_cart_total_amount %>€     Nbre d'articles: <%= @cart.cart_items_number %></h6>
  <h6>Numero Panier: <%= @cart.id %>     client: <%= current_user.email %></h6>

  </div>

          <% @cart.cart_hash.each do |key, qty| %>
            <div class="row g-3 mb-3 align-items-center">
              <div class="col-sm-1 ">
               <%= render partial: 'items/image' %>
              </div>
              <div class="col-sm-2 ">
                <%= display_name(key) %>
              </div>
              <div class="col-sm-2">
              Prix:<%=  @cart.find_cart_items_price(key) %> 
              </div>
              <div class="col-sm-2">
               Quantité: <%= qty.to_i %>
              </div>
              <div class="col-sm-2">
              Total: <%= @cart.find_cart_items_price(key)*qty %> €
             </div>
              <div class="col-sm-1">
                <%= button_to "+", cart_items_path(item_id: key), class: "btn btn-info btn-block", method: :post, data: { turbo: false } %> 
              </div>
              <div class="col-sm-1">
                <%= button_to "-", cart_items_path(item_id: key), class: "btn btn-info btn-block", method: :post, data: { turbo: false } %> 
              </div>

            </div>
          <% end %>
      

</div>






















  <%= button_to "Suppimer le panier", @cart, method: :delete %>
</div>
