<div style="display: flex; justify-content: center; align-items: center;">
  <% flash.each do |name, msg| %>
    <div data-controller="flash" role="alert" class="<%= class_for_flash(name)%>">
      <%= msg %>
      <button style="align-items: center; padding: 10px 10px;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>


