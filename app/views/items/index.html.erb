<p style="color: green"><%= notice %></p>

<div>
<%= render partial: "cart_items/cart_items_summary" %>
</div>
<h1>Menu</h1>
<div class="container-fluid text-center">
  <% categories = ["Dwish 🥪", "Salades 🥬", "Boissons 🥤", "Desserts 🍪", "Accompagnements 🍟"] %>
  <% categories.each do |category| %>
    <h3><%= category %></h3>
    <div class="row row-cols-3">
      <% @items.select { |item| item.category.name == category }.each do |item| %>
        <div class="col">
          <%= render item %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
