<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row my">
      <div class="col-md-6">
        <h5>Personal Information</h5>
        <ul class="list-group mt-5 mb-5">
          <li class="list-group-item"><strong>First Name: </strong><%= @user.first_name %> </li>
          <li class="list-group-item"><strong>Last Name: </strong><%= @user.last_name %> </li>
          <li class="list-group-item"><strong>Email: </strong><%= @user.email %> </li>
          <li class="list-group-item"><strong>Phone: </strong><%= @user.phone %> </li>
        </ul>
        <%= render(ButtonComponent.new(label: "Edit Personal Information", url:  edit_user_registration_path(current_user), style: "dark", size: "md")) %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-12">
        <h5>Order History</h5>
        <table class="table my-5">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Order Amount</th>
              <th>Order Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.amount %></td>
                <td><%= order.created_at %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-12">
        <h2>You must sign in to view your information</h2>
      </div>
    </div>
  </div>
<% end %>
